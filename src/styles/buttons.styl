.btn
    text-decoration none
    background #900
    color white
    border none
    border-radius 15px
    font-size 13px
    line-height 25px
    padding 0 15px
    margin 10px
    cursor pointer
    &.btn-submit
        background #3ab32d
    &.btn-cancel
        background #917461
    &.btn-submit[disabled='true'],
    &.btn-cancel[disabled='true']
        background #ccc

.small-btn
    text-decoration none
    cursor pointer
    margin-right 15px
    color white
    border none
    border-radius 15px
    font-size 12px
    line-height 1.2
    padding 2px 10px

@media screen and (max-width: 600px)
    .small-btn
        margin-right 5px
